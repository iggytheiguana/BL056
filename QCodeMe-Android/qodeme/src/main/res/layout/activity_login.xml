    <LinearLayout
        android:id="@+id/linear_clear_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_password"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <biz.softtechnics.qodeme.ui.common.TextViewMedium
            android:id="@+id/textView_not_you"
            style="@style/TextView.Message.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="@string/not_you"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <biz.softtechnics.qodeme.ui.common.TextViewRegular
            android:id="@+id/textView_clearQR"
            style="@style/TextView.Message.Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text="@string/clear_qr_code"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <biz.softtechnics.qodeme.ui.common.TextViewMedium
        android:id="@+id/textView_emptyQRText"
        style="@style/TextView.Message.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_password"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:visibility="invisible"
        android:text="@string/login_text"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signin"
        android:layout_marginBottom="20dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/password"
            style="@style/EditText.Password.Signin"
            android:layout_width="match_parent"
            android:background="@drawable/bg_signin_btn"
            android:hint="@string/enter_password"
            android:nextFocusDown="@+id/signin"
            android:textColor="@android:color/white" />

        <biz.softtechnics.qodeme.ui.common.TextViewItalic
            android:id="@+id/textView_errorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:paddingLeft="10dp"
            android:text="@string/password_must_match"
            android:textColor="@color/red_dark"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>